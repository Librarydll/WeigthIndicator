<UserControl x:Class="WeigthIndicator.Controls.PaginateController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeigthIndicator.Controls"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" >
    <ui:SimpleStackPanel Spacing="8" Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" >
        <Button Content="&lt;&lt;" FontWeight="Bold" x:Name="GoPrevious">

        </Button>
        <TextBlock FontWeight="Bold" FontSize="18"  HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Run x:Name="CurrentPage"/>
                    <Run Text="/"/>
                    <Run x:Name="TotalPages"/>
        </TextBlock>
        <Button Content=">>"  FontWeight="Bold" x:Name="GoNext">

        </Button>
    </ui:SimpleStackPanel>
</UserControl>
